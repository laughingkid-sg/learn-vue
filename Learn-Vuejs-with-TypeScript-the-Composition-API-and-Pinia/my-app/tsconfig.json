{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node"
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}